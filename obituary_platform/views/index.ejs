<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Obituaries</title>
    <link rel="stylesheet" href="/styles.css">
    <meta name="description" content="Obituary platform for submitting and viewing obituaries">
    <meta name="keywords" content="obituary, memorial, tribute">
    <meta property="og:title" content="Obituaries">
    <meta property="og:description" content="Obituary platform for submitting and viewing obituaries">
    <meta property="og:type" content="website">
    <meta property="og:url" content="http://localhost:3000">
    <meta property="og:image" content="http://localhost:3000/image.jpg">
</head>
<body>
    <h1>Obituaries</h1>
    <a href="/submit">Submit New Obituary</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Date of Death</th>
                <th>Content</th>
                <th>Author</th>
                <th>Submission Date</th>
            </tr>
        </thead>
        <tbody>
            <% obituaries.forEach(obituary => { %>
                <tr>
                    <td><%= obituary.name %></td>
                    <td><%= obituary.date_of_birth %></td>
                    <td><%= obituary.date_of_death %></td>
                    <td><%= obituary.content %></td>
                    <td><%= obituary.author %></td>
                    <td><%= obituary.submission_date %></td>
                    <td>
                        <div id="fb-root"></div>
    <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div class="fb-share-button" 
         data-href="http://localhost:3000/obituary/<%= obituary.id %>" 
         data-layout="button">
    </div> 
                        
                    </td>
                    <td>
                        <div>
                            <a class="twitter-share-button"
                            href="{{ twitter_share_url }}"
                            data-size="large">
                         Tweet</a>
                         <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                        </div>
                        
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>

</html>

